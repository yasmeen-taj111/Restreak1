{
  "name": "restreak",
  "version": "1.0.0",
  "description": "Monthly habit and sleep tracker application",
  "main": "server.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon backend/server.js",
    "client": "cd frontend && npm start",
    "install-server": "npm install",
    "install-client": "cd frontend && npm install",
    "install-all": "npm run install-server && npm run install-client"
  },
  "keywords": ["habit-tracker", "sleep-tracker", "health"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^8.0.3",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "dotenv": "^16.3.1",
    "cors": "^2.8.5",
    "express-validator": "^7.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "concurrently": "^8.2.2"
  }
}

